{% extends 'base.html.twig' %}

{% block title %}BJ TechnoDev - Contactez nous pour plus de renseignement ou autres{% endblock %}
{% block metadescription %}Venez nous contacter si vous avez besoin de renseignement ou bien si vous avez besoin de nos services présenté précédemment nous sommes à l'écoute de tous{% endblock %}


{% block body %}
    {% for message in app.flashes('success') %}
        <div style="float: right; margin-top: 10px; margin-right: 10px" class="alert alert-dismissible alert-success flash-notice" role="alert" id="success-alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
    <div style="float: right; margin-top: 10px; margin-right: 10px" class="alert alert-danger flash-notice" role="alert" id="danger-alert">
        {{ message }}
    </div>
    {% endfor %}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section" style="text-shadow: 3px 2px 2px black">Contact Us ✉️</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="wrapper">
                    <div class="row no-gutters">
                        <div class="col-md-6 d-flex align-items-stretch">
                            <div class="contact-wrap w-100 p-md-5 p-4 py-5">
                                <h3 class="mb-4" style="text-shadow: -2px -2px 2px white">Write us</h3>
                                {{ form_start(our_form) }}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                               {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_row(our_form.subject, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="submit" value="Send Message" class="btn" style="background-color: #5289D8; color: #F9F190">
                                                <div class="submitting"></div>
                                            </div>
                                        </div>
                                    </div>
                                {{ form_end(our_form) }}
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-stretch">
                            <div class="info-wrap w-100 p-md-5 p-4 py-5 img">
                                <h3 style="text-shadow: -2px -1px 2px white">Contact information</h3>
                                <p class="mb-4" style="color: white">We're open for any suggestion or just to have a chat</p>
                                <div class="dbox w-100 d-flex align-items-start">
