                                                    grecaptcha.execute('6Ldx4rsfAAAAAJlD06YOFifaIdlkvfvHpe3QKzvH', {action: 'contact'})
                                                        .then(function(token) {
                                                        document.getElementById('g-recaptcha-response').value = token; }); }); </script>


                                                <script src="https://www.google.com/recaptcha/api.js?render=6Ldx4rsfAAAAAJlD06YOFifaIdlkvfvHpe3QKzvH&onload=recaptchaCallback_form_captcha" async defer></script>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_end(our_form) }}
                                </div>
                            </div>
                            <div class="col-md-6 d-flex align-items-stretch">
                                <div class="info-wrap w-100 p-md-5 p-4 py-5 img">

                                    <h3 style="text-shadow: -2px -1px 2px white">Nos information</h3>
                                    <p class="mb-4" style="color: white">Nous sommes ouvert a toutes demandes ou questions</p>
